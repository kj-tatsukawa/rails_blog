<div class="page-title-container">
  <%= button_to 'やっぱやめ', "/#{@page_detail.content_type}/#{@page_detail.id}", method: :get %>
  <%= form_tag("/#{@page_detail.content_type}/#{@page_detail.id}/update") do %>
    <input type="submit" value="保存する">
    <div class="page-title">
      <p class="edit-form-name">ブログタイトル</p>
      <input name="page_title" value="<%= @page_detail.page_title %>">
    </div>
  </div>
  <div class="page-body-container">
    <div class="page-body">
      <p class="edit-form-name">本文</p>
      <textarea name="page_body"><%= @page_detail.page_body %></textarea>
<!--      <input type="submit" value="保存する">-->
    </div>
  </div>
<% end %>

